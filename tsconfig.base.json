{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "paths": {
      "@widget-creator/shared": ["./packages/shared/src"],
      "@widget-creator/shared/*": ["./packages/shared/src/*"],
      "@widget-creator/pricing-engine": ["./packages/pricing-engine/src"],
      "@widget-creator/pricing-engine/*": ["./packages/pricing-engine/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
