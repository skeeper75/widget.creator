{
  "name": "widget-creator",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "turbo run lint",
    "db:seed": "tsx scripts/seed.ts",
    "db:verify": "tsx scripts/seed-verify.ts",
    "db:setup": "pnpm db:migrate && pnpm db:seed && pnpm db:verify",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:import": "tsx scripts/import/index.ts",
    "db:import:dry": "tsx scripts/import/index.ts --dry-run",
    "db:import:validate": "tsx scripts/import/index.ts --validate-only",
    "db:import:mes-items": "tsx scripts/import/import-mes-items.ts",
    "db:import:papers": "tsx scripts/import/import-papers.ts"
  },
  "dependencies": {
    "@widget-creator/shared": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8",
    "zod": "~3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "~3.0.9",
    "drizzle-kit": "^0.31.9",
    "exceljs": "^4.4.0",
    "playwright": "^1.58.2",
    "tsx": "^4.0.0",
    "turbo": "^2.0.0",
    "typescript": "~5.7.0",
    "vitest": "~3.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
