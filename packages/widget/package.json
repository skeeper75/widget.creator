{
  "name": "@widget-creator/widget",
  "version": "1.0.0",
  "description": "Embeddable Widget SDK for Widget Creator",
  "type": "module",
  "main": "./dist/embed.iife.js",
  "module": "./dist/embed.iife.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/embed.iife.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "bundle:size": "vite build && gzip -c dist/embed.js | wc -c"
  },
  "dependencies": {
    "@preact/signals": "^1.2.3",
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^22.10.5",
    "jsdom": "^26.0.0",
    "terser": "^5.37.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "sideEffects": false
}
